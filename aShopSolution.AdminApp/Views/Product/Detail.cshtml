@model eShopSolution.ViewModels.Catalog.CMProductViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration _conf;
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Cập nhật sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Index">Trang chủ</a></li>
        <li class="breadcrumb-item active">Cập nhật sản phẩm</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về danh sách</a>
            <a class="btn btn-primary" href="@($"/Edit/{Model.Id}")">Sửa</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OriginalPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OriginalPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Stock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Stock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ViewCount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ViewCount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Details)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Details)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SeoDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeoDescription)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SeoTitle)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeoTitle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SeoAlias)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeoAlias)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsFeature)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsFeature)
                </dd>
            </dl>

            @*-------------------------------------*@

            <div class="container">
                <h5>Hình ảnh của sản phẩm</h5>
                <hr>
                <div class="row">
                    <div class="col-lg-4 col-sm-6">
                        <div class="thumbnail img-responsive">
                            <img class="img-thumbnail" style=" border: solid #ba7c3b 2px;" src="@(_conf["ProductImageAddress"] + Model.ThumbnailImage)">
                        </div>
                    </div>
                    @foreach (var lfi in Model.LittleFingernails)
                    {
                        <div class="col-lg-4 col-sm-6">
                            <div class="thumbnail img-responsive">
                                <img class="img-thumbnail" src="@(_conf["ProductImageAddress"] + lfi)">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




